-- init.lua
vim.cmd([[ set termguicolors ]])

-- bootstrap lazy.nvim (if not installed yet)
local lazypath = vim.fn.stdpath("data") .. "/lazy/lazy.nvim"
if not vim.loop.fs_stat(lazypath) then
  vim.fn.system({
    "git",
    "clone",
    "--filter=blob:none",
    "https://github.com/folke/lazy.nvim.git",
    "--branch=stable",
    lazypath,
  })
end
vim.opt.rtp:prepend(lazypath)

require("lazy").setup({
  -- Theme
  {
    "folke/tokyonight.nvim",
    lazy = false,
    priority = 1000,
    opts = {
      style = "night",       -- or "storm", "moon", "day"
      transparent = false,
      terminal_colors = true,
      styles = {
        comments = { italic = true },
        keywords = { italic = true },
      },
    },
    config = function()
      vim.cmd([[colorscheme tokyonight]])
    end,
  },

  -- Add here other plugins you want e.g. LSP, treesitter, etc.
})

-- Basic options
local opt = vim.opt
opt.number = true
opt.relativenumber = true
opt.scrolloff = 8
opt.cursorline = true
opt.expandtab = true
opt.shiftwidth = 2
opt.tabstop = 2
opt.termguicolors = true

